# ================================
# AUI WELLBEING HUB - PRODUCTION ENV
# ================================
# Copy this to .env and fill in the values

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=https://your-frontend-domain.com

# Backend URL (for OAuth callbacks)
BACKEND_URL=https://your-backend-domain.com

# Database (PostgreSQL connection string from your provider)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Redis URL (for BullMQ job queue)
REDIS_URL=redis://default:password@host:6379

# JWT Secret (MUST be a strong random string - generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET

# ================================
# GOOGLE OAUTH CONFIGURATION
# ================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ================================
# MICROSOFT OAUTH CONFIGURATION
# ================================
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common

# ================================
# EMAIL CONFIGURATION (Optional)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@your-domain.com
